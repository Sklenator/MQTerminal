<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuFragment">

        <ImageView
            android:id="@+id/img_settings"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:src="?attr/actionSettings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.982"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtV_main_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mqtt_main_menu"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <Button
            android:id="@+id/btn_m_m_house"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_marginTop="144dp"
            android:background="@drawable/button_background"
            android:text="@string/house"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_m_m_garden"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_marginTop="144dp"
            android:background="@drawable/button_background"
            android:text="@string/garden"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.764"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_m_m_basement"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_marginTop="488dp"
            android:background="@drawable/button_background"
            android:text="@string/basement"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_m_m_garage"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:background="@drawable/button_background"
            android:text="@string/garage"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.764"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578" />

        <TextView
            android:id="@+id/txtV_conn_disconn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/press_conn"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.796" />

        <Button
            android:id="@+id/btn_conn_disconn"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:text="@string/conn"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtV_conn_disconn"
            app:layout_constraintVertical_bias="0.046" />

        <ImageView
            android:id="@+id/imgV_m_m_spsoa_logo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="20dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.019"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="?attr/actionLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>