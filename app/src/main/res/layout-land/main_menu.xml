<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuFragment">

        <ImageView
            android:id="@+id/imgV_house"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="95dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/house_f" />

        <ImageView
            android:id="@+id/imgV_basement"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="95dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/basement_f" />

        <TextView
            android:id="@+id/btn_basement_t"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/basement"
            android:textAlignment="center"
            android:textColor="#5ce1e6"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgV_basement"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imgV_basement"
            app:layout_constraintTop_toBottomOf="@+id/imgV_basement"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgV_garage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/garage_f" />

        <TextView
            android:id="@+id/btn_garage_t"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/garage"
            android:textAlignment="center"
            android:textColor="#5ce1e6"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgV_garage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imgV_garage"
            app:layout_constraintTop_toBottomOf="@+id/imgV_garage"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/btn_house_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/house"
            android:textAlignment="center"
            android:textColor="#5ce1e6"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgV_house"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imgV_house"
            app:layout_constraintTop_toBottomOf="@+id/imgV_house"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgV_garden"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="204dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/garden_f" />

        <TextView
            android:id="@+id/btn_garden_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/garden"
            android:textAlignment="center"
            android:textColor="#5ce1e6"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgV_garden"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imgV_garden"
            app:layout_constraintTop_toBottomOf="@+id/imgV_garden"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/img_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="?attr/actionSettings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtV_main_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mqtt_main_menu"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/txtV_conn_disconn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/press_conn"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.821" />

        <Button
            android:id="@+id/btn_conn_disconn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtV_conn_disconn"
            app:layout_constraintVertical_bias="0.045" />

        <ImageView
            android:id="@+id/imgV_m_m_spsoa_logo"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="?attr/actionLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>